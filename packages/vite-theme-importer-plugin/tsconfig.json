{
  "compilerOptions": {
    "esModuleInterop": true,
    "composite": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist/",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
